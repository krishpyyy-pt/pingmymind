---

layout: "base.njk"

---
<article class="post-full">
<h1>{{ title }}</h1>
<p class="post-meta"> Published on {{ date | readableDate }}</p> 
    {% if featured_image %}
        <figure class="featured-image">
            <img src="{{ featured_image | url }}" alt="{{ featured_alt | default('') }}">
            {% if featured_alt %}
                <figcaption>{{ featured_alt }}</figcaption>
            {% endif %}
        </figure>
    {% endif %}
{{ content | safe }}
</article>